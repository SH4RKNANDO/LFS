provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(
  'binutils-2.35.tar.xz'
  'BINUTILS_PKGBUILD'
  'gcc-10.2.0.tar.xz'
  'mpfr-4.1.0.tar.xz'
  'gmp-6.2.0.tar.xz'
  'mpc-1.1.0.tar.gz'
  'GCC_PKGBUILD'
  'linux-5.8.1.tar.xz'
  'LINUXHEADER_PKGBUILD'
  'glibc-2.32.tar.xz'
  'GLIBC_PKGBUILD'
  'glibc-2.32-fhs-1.patch'
  'LIBSTDC_PKGBUILD'
)
noextract=()
md5sums=(
